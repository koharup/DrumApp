<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/live"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="6"
        android:rowCount="2">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#00000000"
            android:gravity="fill"
            android:onClick="bass"
            android:padding="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/bass" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:background="#00000000"
            android:gravity="fill"
            android:onClick="cymbal1"
            android:padding="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/cymbal1" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:background="#00000000"
            android:gravity="fill"
            android:onClick="cymbal2"
            android:padding="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/cymbal2" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="5"
            android:background="#00000000"
            android:gravity="fill"
            android:onClick="cymbal3"
            android:padding="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/cymbal3" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#00000000"
            android:gravity="fill"
            android:onClick="hihat"
            android:padding="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/hihat" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#00000000"
            android:gravity="fill"
            android:onClick="snare"
            android:padding="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/snare" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:background="#00000000"
            android:gravity="fill"
            android:onClick="tom1"
            android:padding="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/tom1" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:background="#00000000"
            android:gravity="fill"
            android:onClick="tom2"
            android:padding="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/tom2" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="4"
            android:background="#00000000"
            android:gravity="fill"
            android:onClick="tom3"
            android:padding="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/tom3" />
    </GridLayout>
</RelativeLayout>